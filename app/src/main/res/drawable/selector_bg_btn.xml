<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#9c9c9c" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp" />
            <gradient android:centerColor="#3ace9c" android:endColor="#35cf9d" android:startColor="#42dd79" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="5dp" />
            <gradient android:centerColor="#38ce7c" android:endColor="#30c37d" android:startColor="#41d979" />
        </shape>
    </item>


</selector>